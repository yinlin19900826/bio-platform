<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.biocome.platform.wechatapplet.mapper.RefundRentMapper">
    <resultMap id="BaseResultMap" type="com.biocome.platform.inter.basemanager.entity.Card">
        <!--
          WARNING - @mbggenerated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="logic_cardno" jdbcType="VARCHAR" property="logicCardno"/>
        <result column="physical_cardno" jdbcType="VARCHAR" property="physicalCardno"/>
        <result column="usercode" jdbcType="VARCHAR" property="usercode"/>
        <result column="username" property="username"/>
        <result column="phone" property="phone"/>
        <result column="admincode" property="admincode"/>
        <result column="buildcode" jdbcType="VARCHAR" property="buildcode"/>
        <result column="buildname" property="buildname"/>
        <result column="housecode" property="housecode"/>
        <result column="isalive" jdbcType="VARCHAR" property="isalive"/>
        <result column="createtime" jdbcType="VARCHAR" property="createtime"/>
        <result column="sn" jdbcType="VARCHAR" property="sn"/>
        <result column="cardtype" jdbcType="VARCHAR" property="cardtype"/>
        <result column="cardkind" jdbcType="VARCHAR" property="cardkind"/>
        <result column="remark" property="remark"/>
    </resultMap>
    <resultMap id="BaseResultCardManage" type="com.biocome.platform.wechatapplet.vo.card.CardManageVo">
        <!--
          WARNING - @mbggenerated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="logic_cardno" jdbcType="VARCHAR" property="logicCardno"/>
        <result column="physical_cardno" jdbcType="VARCHAR" property="physicalCardno"/>
        <result column="buildname" jdbcType="VARCHAR" property="buildName"/>
    </resultMap>


    <select id="selectByUserName" resultMap="BaseResultCardManage">
        SELECT
        bc.id,
        bc.logic_cardno,
        bc.physical_cardno,
        bc.buildname
        FROM
        base_card bc
        <where>
            1=1
            <if test="username != null and ''!= username">and bc.username = #{username,jdbcType=VARCHAR}</if>
            AND bc.isalive = 1
        </where>
    </select>

    <select id="selectCardByCardNo" resultMap="BaseResultMap">
        SELECT id,
               logic_cardno,
               physical_cardno,
               usercode,
               username,
               phone,
               admincode,
               buildcode,
               buildname,
               housecode,
               isalive,
               createtime,
               sn,
               cardtype,
               cardkind,
               remark
        FROM base_card
        WHERE physical_cardno = #{cardNo}
    </select>

    <delete id="deleteByUserName" parameterType="java.util.List">
       delete a,b,c from base_lessee as a join
        base_card as b on a.username = b.username join
        app_user as c on a.username = c.username where a.username=#{username}
    </delete>
</mapper>